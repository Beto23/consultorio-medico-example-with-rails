<div class="container form-Medic">
  <h4>Agregar Informacion Doctor</h4>
  <div class="container-iniciar-form">
    <%= form_for([@doctor, @medic])  do |f| %>
      <div class="field">
        <%= f.text_field :doctor_id, :value => @doctor.id,  autofocus: true, class:"input-id"%>
      </div>
      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, autofocus: true, class:"form-control", :required => true%>
      </div>
      <div class="field">
        <%= f.label :cell_phone %><br />
        <%= f.text_field :cell_phone, autofocus: true, class:"form-control", :required => true%>
      </div>
      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address, autofocus: true, class:"form-control", :required => true%>
      </div>
      <div class="field">
        <%= f.label :especialidad %><br />
        <%= f.select :specialty_id , options_for_select(Specialty.all.collect {|p| [p.name, p.id]}) %>
      </div>
      <%= f.submit "Agregar", class:"btn btn-primary"  %>
    <% end %>
  </div>
</div>
