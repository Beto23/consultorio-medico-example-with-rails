<h2 class="title-edit">Edit my account </h2>
<div class="row center-xs margen">
  <div class="container-iniciar-form containerUp">
    <%= content_tag :div do %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"row",  html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <%= content_tag :div, class:"col-xs-5" do %>
          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, class:"form-control"%>
          </div>

          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, class:"form-control"%>
          </div>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        <%end %>

        <%= content_tag :div, class:"col-xs-7" do %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
          </div>
        <%end %>

          <div class="actionsEdit">
            <%= f.submit "Update", class:"btn btn-primary" %>
          </div>
      <% end %>
      <div class="optionsEdit">
        <h3>Cancel my account</h3>

        <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>

      </div>

    <%end %>

  </div>

</div>
