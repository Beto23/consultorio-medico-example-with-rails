<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birth date</th>
      <th>Gender</th>
      <th>State</th>
      <th>City</th>
      <th>Address</th>
      <th>Cp</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Cell</th>
      <th>Blood type</th>
      <th>Smoking</th>
      <th>Alcoholism</th>
      <th>Hereditary background</th>
      <th>Pathological</th>
      <th>Non pathological</th>
      <th>Allergies</th>
      <th>Surgeries</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.birth_date %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.state %></td>
        <td><%= patient.city %></td>
        <td><%= patient.address %></td>
        <td><%= patient.cp %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.cell %></td>
        <td><%= patient.blood_type %></td>
        <td><%= patient.smoking %></td>
        <td><%= patient.alcoholism %></td>
        <td><%= patient.hereditary_background %></td>
        <td><%= patient.pathological %></td>
        <td><%= patient.non_pathological %></td>
        <td><%= patient.allergies %></td>
        <td><%= patient.surgeries %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

