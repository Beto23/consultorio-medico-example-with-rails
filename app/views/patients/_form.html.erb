<div class="container">
  <%= form_for(@patient) do |f| %>

    <%= render "partials/fullMessages" %>
    <% if user_signed_in? || admin_signed_in? %>
      <h3 class="sub-title">Personal information</h3>

      <div class="info-personal row between-xs">
        <div class="foto-expediente col-xs-2">
          <img src="" alt="Gravatar" />
        </div>
        <div class="info-personal row col-xs-9">
          <div class="info-personal-form-uno col-xs-6">
            <div class="field">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>
            <div class="field">
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>
            <div class="field">
              <%= f.label :gender %>
              <%= f.select :gender , options_for_select(["Male", "Female"].each {|gender| [gender]}) %>
            </div>
            <div class="field">
              <%= f.label :state %>
              <%= f.text_field :state %>
            </div>
            <div class="field">
              <%= f.label :phone %>
              <%= f.text_field :phone %>
            </div>
          </div>
          <div class="info-personal-form-uno col-xs-6">
            <div class="field">
              <%= f.label :city %>
              <%= f.text_field :city %>
            </div>
            <div class="field">
              <%= f.label :address %>
              <%= f.text_field :address %>
            </div>
            <div class="field">
              <%= f.label :cp %>
              <%= f.text_field :cp %>
            </div>
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>
            <div class="field">
              <%= f.label :cell %>
              <%= f.text_field :cell_phone %>
            </div>
          </div>
        </div>

      </div>
    <%end %>
    <% if doctor_signed_in? || admin_signed_in? %>
      <h3 class="sub-title">Background personal</h3>
      <div class="info-personal row between-xs">
        <div class="col-xs-6">
          <div class="field">
            <%= f.label :blood_type %>
            <%= f.text_field :blood_type %>
          </div>
          <div class="field">
            <%= f.label :smoking %>
            <%= f.text_field :smoking %>
          </div>
          <div class="field">
            <%= f.label :alcoholism %>
            <%= f.text_field :alcoholism %>
          </div>
          <div class="field">
            <%= f.label :hereditary_background %>
            <%= f.text_area :hereditary_background %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="field">
            <%= f.label :pathological %>
            <%= f.text_area :pathological %>
          </div>
          <div class="field">
            <%= f.label :non_pathological %>
            <%= f.text_area :non_pathological %>
          </div>
          <div class="field">
            <%= f.label :allergies %>
            <%= f.text_area :allergies %>
          </div>
          <div class="field">
            <%= f.label :surgeries %>
            <%= f.text_area :surgeries %>
          </div>
        </div>
      </div>
    <%end %>

    <div class="actions btn-patient row">
      <%= link_to 'Back', patients_path, class:"btn btn-default" %>
      <%= f.submit "Create patient", class:"btn btn-primary"  %>
    </div>
  <% end %>
</div>
