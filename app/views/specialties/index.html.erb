<section class="container-listado">
  <ul class="nav nav-tabs">
    <li role="presentation" class="active" ><a href="">Especialidades</a></li>
  </ul>
    <div class="container-all-listado">
      <table class="table table-hover container-all-listado-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Especialidad</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @specialties.each do |specialty|  %>
            <tr>
              <td><%= specialty.id  %></td>
              <td><%=specialty.name%></td>
              <td>
                <%= link_to(specialty, method: :delete) do %>
                  <i class="fa fa-ban"></i>
                <%end %>
                <%= link_to (edit_specialty_path(specialty.id)) do %>
                  <i class="fa fa-pencil"></i>
                <%end %>
              </td>
            </tr>
          <%end %>
        </tbody>
      </table>
    </div>
    <%= link_to (new_specialty_path) do  %>
      <button type="button" class="btn btn-primary" name="button">Agregar </button>
    <%end %>
</section>
