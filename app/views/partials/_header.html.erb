				<li class="col-xs-2  row margen center-xs"><%= link_to "Acerca de", root_path, class:"nav-items"  %></li>
				<li class="col-xs-2  row margen center-xs"><%= link_to "Iniciar Sesión", new_user_session_path, class:"nav-items" %></li>
