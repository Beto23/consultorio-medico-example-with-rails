			<h1>Buena Salud</h1>
		</div>
	</div>
	<nav class="header-home-nav">
		<ul class="row margen start-xs">
			<li class="col-xs-2  row margen center-xs"><%= link_to "Inicio", root_path, class:"nav-items" %></li>

			<% if user_signed_in? %>
				<li class="col-md  row margen center-xs"><%= link_to "Consultas", specialties_path, class:"nav-items"  %></li>
				<li class="col-md  row margen center-xs"><%= link_to "Pacientes", specialties_path, class:"nav-items"  %></li>
