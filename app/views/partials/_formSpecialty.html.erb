<section>
  <% name ||= "Agregar Especialidad"  %>
  <% nameBtn ||= "Agregar"  %>
  <ul class="nav nav-tabs">
    <li role="presentation" class="active tabs" ><a href=""><%= name  %></a></li>
  </ul>
  <%= form_for(@specialty)  do |f| %>

    <div class="form-group">
      <label>Nombre</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <% @specialty.errors.full_messages.each do |message|  %>
      <div class="be_red white to-space">
        * <%= message  %>
      </div>
    <%end %>
    <%= f.submit nameBtn, class:"btn btn-primary"  %>

  <% end %>
</section>
